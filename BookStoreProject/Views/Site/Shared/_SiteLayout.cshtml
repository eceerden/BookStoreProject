<!DOCTYPE html>
<html lang="zxx">


<head>

    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1">

    <!-- Title -->
    <title>..:: BOOK STORE ::..</title>

    <!-- Favicon -->
    <link href="/Site/images/favicon.ico" rel="icon" type="image/x-icon" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i%7CLato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
    <link href="/Site/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- Mobile Menu -->
    <link href="/Site/css/mmenu.css" rel="stylesheet" type="text/css" />
    <link href="/Site/css/mmenu.positioning.css" rel="stylesheet" type="text/css" />

    <!-- Stylesheet -->
    <link href="/Site/css/bsstyle.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.min.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery Latest Version 1.x -->
    <script type="text/javascript" src="/Site/js/jquery-1.12.4.min.js"></script>

    <!-- jQuery UI -->
    <script type="text/javascript" src="/Site/js/jquery-ui.min.js"></script>

    <!-- jQuery Easing -->
    <script type="text/javascript" src="/Site/js/jquery.easing.1.3.js"></script>

    <!-- Bootstrap -->
    <script type="text/javascript" src="/Site/js/bootstrap.min.js"></script>

    <!-- Mobile Menu -->
    <script type="text/javascript" src="/Site/js/mmenu.min.js"></script>

    <!-- Harvey - State manager for media queries -->
    <script type="text/javascript" src="/Site/js/harvey.min.js"></script>

    <!-- Waypoints - Load Elements on View -->
    <script type="text/javascript" src="/Site/js/waypoints.min.js"></script>

    <!-- Facts Counter -->
    <script type="text/javascript" src="/Site/js/facts.counter.min.js"></script>

    <!-- MixItUp - Category Filter -->
    <script type="text/javascript" src="/Site/js/mixitup.min.js"></script>

    <!-- Owl Carousel -->
    <script type="text/javascript" src="/Site/js/owl.carousel.min.js"></script>

    <!-- Accordion -->
    <script type="text/javascript" src="/Site/js/accordion.min.js"></script>

    <!-- Responsive Tabs -->
    <script type="text/javascript" src="/Site/js/responsive.tabs.min.js"></script>

    <!-- Responsive Table -->
    <script type="text/javascript" src="/Site/js/responsive.table.min.js"></script>

    <!-- Masonry -->
    <script type="text/javascript" src="/Site/js/masonry.min.js"></script>

    <!-- Carousel Swipe -->
    <script type="text/javascript" src="/Site/js/carousel.swipe.min.js"></script>

    <!-- bxSlider -->
    <script type="text/javascript" src="/Site/js/bxslider.min.js"></script>

    <!-- Custom Scripts -->
    <script type="text/javascript" src="/Site/js/main.js"></script>
</head>

<body class="layout-v3">

    <!-- Start: Header Section -->
    <header id="header" class="navbar-wrapper">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar navbar-default">
                    <div class="menu-wrap">
                        <div class="navbar-header">
                            <div class="navbar-brand">
                                <h1>
                                    <a href="/SiteHome/">
                                        <img style="width:130px;height:50px" src="/Site/images/bookstorelogobookwhite.png" alt="Book Store" />
                                    </a>
                                </h1>
                            </div>
                        </div>
                        <!-- Navigation -->
                        <div class="navbar-collapse hidden-sm hidden-xs">
                            <ul class="nav navbar-nav">
                                <li class="dropdown active">
                                    <a data-toggle="dropdown" class="dropdown-toggle disabled" href="/SiteHome/">Home</a>
                                  
                                </li>
                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle disabled" href="/SiteBook/">Books</a>
                                 
                                </li>

                                <li class="dropdown">
                                    <a data-toggle="dropdown" class="dropdown-toggle disabled" href="/SitePerson">Writers/Interpreters</a>
                                  
                                </li>
                           


                                <li><a href="/SiteHome/About/">About</a></li>
                            </ul>
                            <!-- Header Topbar -->
                            <div class="header-topbar hidden-md">
                                <div class="topbar-links">
                                    @if (TempData["UserName"] != null)
                                    {
                                        <div>
                                            <a style="padding-right:10px" href="/SiteAccount/Logout"><i class="fa fa-lock"></i>LogOut</a>
                                            <a href="/UserAction/Edit/@TempData["UserID"]"> <i class="fa fa-user"></i>My Account</a>
                                        </div>
                                        <span class="d-none d-md-inline">Welcome @TempData["UserName"]</span>
                                    }
                                    else
                                    {
                                <a href="/SiteAccount/"><i class="fa fa-lock"></i>Login / Register</a>
                                    }

                                </div>
                            </div>
                            <!-- Header Topbar -->
                        </div>

                    </div>
                    <div class="mobile-menu hidden-md hidden-lg">
                        <a href="#mobile-menu"><i class="fa fa-navicon"></i></a>
                        <div id="mobile-menu">
                            <ul>
                                <li class="mobile-title">
                                    <h4>Navigation</h4>
                                    <a href="#" class="close"></a>
                                </li>
                                <li>
                                    <a href="/SiteHome/">Home</a>
                              
                                </li>
                                <li>
                                    <a href="/SiteHome/Books/">Books</a>
                                
                                </li>

                              
                                <li>
                                    <a href="/SitePerson/">Writers/Interpreters</a>
                               
                                </li>

                                <li><a href="/SiteHome/About">About</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- End: Header Section -->
   
    <div>

        @RenderBody()
    </div>

    <!-- Start: Footer -->
    <footer class="site-footer">
        <div class="container">
        </div>
        <div class="sub-footer">
            <div class="container">
                <div class="row">
                    <div class="footer-text col-md-3">
                        <p><a target="" href="/SiteHome/" style="color:#ff7236">Book Store</a></p>
                    </div>
                    <div class="col-md-9 pull-right">
                        <ul>
                            <li><a href="/SiteHome/">Home</a></li>
                            <li><a href="/SiteBook/">Books</a></li>
                            <li><a href="/SitePerson/">Writers/Interpreters</a></li>
                            
                            <li><a href="/SiteHome/About">About</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>







</body>


</html>



