
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

@model List<BookStoreProject.Models.VM.BookVM>
<!-- DataTables -->
<link rel="stylesheet" href="/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="/Admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">


<!-- Left navbar links -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Books</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Books</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Books</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped" style="text-align:center">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Book Name</th>
                                        <th>Writer</th>
                                        <th>Interpreter</th>
                                        <th>Publisher</th>
                                        <th>Publish Date</th>
                                        <th>Edition</th>
                                        <th>Category</th>
                                        <th>Add Date</th>
                                        <th>Comments</th>
                                        <th>User Points</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.BookID</td>
                                        <td>@item.Name</td>

                                        <td>
                                            @foreach (var data in item.BookPersons.Where(q => q.DutyID == 0))
                                            {


                                                <span>@data.Person.Name @data.Person.SurName</span>

                                            }
                                        </td>
                                        <td>
                                            @foreach (var data in item.BookPersons.Where(q => q.DutyID == 1))
                                            {


                                                <span>@data.Person.Name @data.Person.SurName</span>

                                            }
                                        </td>

                                        <td>@item.Publisher</td>
                                        <td>@item.PublishDate</td>
                                        <td>@item.Edition</td>


                                        <td>
                                            @foreach (var data1 in item.bookCategories)
                                            {

                                                <span>@data1.Category.CategoryName</span>
                                            }
                                        </td>

                                        <td>@item.AddDate.ToString("dd.MM.yyyy")</td>

                                        <td>
                                            <a class="btn btn-sm btn-outline-primary"
                                               href="/Book/CommentDetail/@item.BookID" role="button">
                                                <i class="fas fa-comment"></i>Comments
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary"
                                               href="/Book/UserPoint/@item.BookID" role="button">
                                                <i class="fas fa-vote-yea"></i>User Points
                                            </a>
                                        </td>

                                        <td>
                                            <a class="btn btn-sm btn-outline-warning edit"
                                               href="/Book/Edit/@item.BookID"
                                               role="button" id=@item.BookID>
                                                <i class="fas fa-edit"></i>Edit
                                            </a>
                                            <a class="btn btn-sm btn-outline-danger delete"
                                               role="button" id=@item.BookID>
                                                <i class="fas fa-trash"></i>Delete
                                            </a>
                                        </td>
                                    </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<!-- DataTables  & Plugins -->
<script src="/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="/Admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="/Admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="/Admin/plugins/jszip/jszip.min.js"></script>
<script src="/Admin/plugins/pdfmake/pdfmake.min.js"></script>
<script src="/Admin/plugins/pdfmake/vfs_fonts.js"></script>
<script src="/Admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="/Admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="/Admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>


