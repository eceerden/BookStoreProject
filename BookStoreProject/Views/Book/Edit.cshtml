<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Book Edit Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Book Edit Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-lg">
                    <!-- general form elements -->
                    <div class="card card-teal">
                        <div class="card-header">
                            <h3 class="card-title">Edit Book</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/Book/Edit" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.LabelFor(q => q.Name)
                                    @Html.TextBoxFor(q => q.Name, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter Book Name" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(q => q.Publisher)
                                    @Html.TextBoxFor(q => q.Publisher, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter Publisher" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(q => q.PublishDate)
                                    @Html.TextBoxFor(q => q.PublishDate, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter Publish Date" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(q => q.Edition)
                                    @Html.TextBoxFor(q => q.Edition, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter Edition" })
                                </div>

                                @*<div class="form-group">
                                        <label for="exampleInputFile">File input</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                            </div>
                                            <div class="input-group-append">
                                                <span class="input-group-text">Upload</span>
                                            </div>
                                        </div>
                                    </div>*@
                                @*<div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                                    </div>*@

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Category</label>
                                        <select class="select2" name="catarray" multiple="multiple" data-placeholder="Select a Category" style="width: 100%;">
                                            @foreach (var item in Model.categories)
                                            {
                                                <option value="@item.ID">@item.CategoryName</option>
                                            }
                                        </select>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Writer/Interpreter</label>
                                        <select class="select2" name="personarray" multiple="multiple" data-placeholder="Select a Writer/Interpreter" style="width: 100%;">
                                            @foreach (var item in Model.people)
                                            {
                                                <option value="@item.ID">@item.Name @item.SurName</option>
                                            }
                                        </select>
                                        @Html.HiddenFor(q => q.BookID)

                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>


                </div>
                <!--/.col (left) -->

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
    $(document).ready(function () {
        //Initialize Select2 Elements
        $('.select2').select2()

        //Initialize Select2 Elements
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        })

    });


</script>
