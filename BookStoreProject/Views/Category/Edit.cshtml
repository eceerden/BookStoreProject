
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

@model BookStoreProject.Models.VM.CategoryVM

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Category Edit Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Category Edit Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-lg">
                    <!-- general form elements -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Edit Category</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="/Category/Edit" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.LabelFor(q => q.CategoryName)
                                    @Html.TextBoxFor(q => q.CategoryName, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter Category Name", @id = "name" })
                                    @Html.ValidationMessageFor(q => q.CategoryName, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(q=>q.CategoryID)
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>

