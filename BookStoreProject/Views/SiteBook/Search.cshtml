    subcategoryselect.empty(); // clear existing options
    //if (!categoryId) {
    //    return; // there is no point making an ajax call so just exit
    //}
    $.ajax({
        type: 'POST', // or 'GET' depending on how you have modified the method above
        url: "/SiteHome/Getsubcategory", // use @Url.Action() to generate urls
        data: { catalog: categoryId },
        success: function (response) {
            console.log(response);

            subcategoryselect.append($('<option></option>').val(0).text('Please select subcategory')); // add a default null option
            $.each(response, function (i, item) {
                subcategoryselect.append($('<option></option>').val(item.id).text(item.categoryName));
            });

        },
        error: function (result) {
            console.log("FAILED");
            subcategoryselect.append($('<option></option>').text('Search the SubCategory'));
        }
    });

