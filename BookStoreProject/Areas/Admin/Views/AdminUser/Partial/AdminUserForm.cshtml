
@model BookStoreProject.Models.VM.AdminUserVM
<!-- Select2 -->
<link rel="stylesheet" href="/Admin/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="/Admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="/Admin/dist/css/adminlte.min.css">

<div class="card-body">
    @Html.ValidationSummary()
    <div class="form-row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(q => q.Name)

            @Html.TextBoxFor(q => q.Name, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter name" })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(q => q.SurName)

            @Html.TextBoxFor(q => q.SurName, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter surname" })
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(q => q.Email)
            @Html.TextBoxFor(q => q.Email, new { @class = "form-control form-control-border border-width-2", @placeholder = "Enter e-mail" })
        </div>
        <div class="form-group col-lg-6 ">
            @Html.LabelFor(q => q.roles)
            <select class="select2" name="rolearray" multiple="multiple" data-placeholder="Select Duty" style="width: 100%;">

                @if (Model != null)
                {
                    List<int> selected = new List<int>();

                    if (Model.selectedroles != null)
                    {
                        foreach (var item in Model.selectedroles)
                        {

                           <option selected value="@Convert.ToInt32(item)">
                                    @item.ToString()

                           </option>
                            selected.Add(Convert.ToInt32(item));

                        }
                    }
                             
                    @foreach (var item in Model.roles)
                    {
                        if (!selected.Contains(Convert.ToInt32(item)))
                        {
                            <option value="@Convert.ToInt32(item)">@item.ToString()</option>

                        }
                    }
                }

            </select>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(q => q.Password)
            @Html.PasswordFor(q => q.Password, new { @class = "form-control form-control-border border-width-2", @placeholder = "Write Something" })
            @Html.ValidationMessageFor(q => q.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(q => q.ConfirmPassword)
            @Html.PasswordFor(q => q.ConfirmPassword, new { @class = "form-control form-control-border border-width-2", @placeholder = "Write Something" })
            @Html.ValidationMessageFor(q => q.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

    </div>
    

</div>


<!-- Select2 -->
<script src="/Admin/plugins/select2/js/select2.full.min.js"></script>


<script>
    $(document).ready(function () {
        //Initialize Select2 Elements
        $('.select2').select2()

        //Initialize Select2 Elements
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        })

    });


</script>
